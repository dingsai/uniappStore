.home_top {
  width: 100%;
  height: 510rpx;
  box-sizing: border-box;
  position: relative;
}
.home_top .slider-bg {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 460rpx;
  background: linear-gradient(0deg, #f1503d, #c82519 50%);
  background-position: 0% 0%;
  z-index: -1;
}
.home_top .titleBar {
  width: 100%;
  text-align: center;
  color: #fff;
  z-index: 9;
  background: linear-gradient(0deg, #f1503d, #c82519 0);
  background-position: 0% 0%;
  position: fixed;
}
.top_contain {
  heihgt: 400rpx;
}
.top_contain .search {
  width: 100%;
  height: 88rpx;
  display: flex;
  align-items: center;
  box-sizing: border-box;
  position: relative;
}
.top_contain .search .bars_icon {
  width: 80rpx;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
}
.top_contain .search .search_field {
  flex: 1;
  height: 60rpx;
  border-radius: 20rpx;
  padding: 0 14rpx;
}
.top_contain .search .search_field .van-cell {
  height: 60rpx;
  padding: var(--cell-vertical-padding, 8rpx) var(--cell-horizontal-padding, 16rpx);
  border-radius: 40rpx;
}
.top_contain .search .search_button {
  padding-right: 14rpx;
}
.top_contain .home_swiper {
  display: flex;
  justify-content: center;
  height: 280rpx;
}
.top_contain .home_swiper .swiper {
  width: calc(100% - 50rpx);
  height: 100%;
}
.top_contain .home_swiper .swiper .swiper-item,
.top_contain .home_swiper .swiper .swiper-item image {
  width: 100%;
  height: 100%;
  display: block;
  border-radius: 15rpx;
}
.main_contain {
  width: 100%;
}
.main_contain .cateList .van-grid-item__content {
  padding: 10rpx 8rpx;
}
.main_contain .cateList image {
  width: 80rpx;
  height: 80rpx;
}
.main_contain .cateList label {
  color: #666;
  font-size: 22rpx;
  margin-top: 10rpx;
}
.main_contain .commodity_info {
  margin-top: 20rpx;
  width: 100%;
}
.main_contain .commodity_info .waterfall {
  display: flex;
  flex-wrap: wrap;
}
.main_contain .commodity_info .waterfall .waterfall_left,
.main_contain .commodity_info .waterfall .waterfall_right {
  width: 50%;
  box-sizing: border-box;
  padding: 0 10rpx;
}
.main_contain .commodity_info .waterfall .waterfall_left .waterfall_list,
.main_contain .commodity_info .waterfall .waterfall_right .waterfall_list {
  border-radius: 10rpx;
  background-color: #fff;
  box-shadow: 0 4rpx 6rpx #ccc;
  margin-bottom: 20rpx;
}
.main_contain .commodity_info .waterfall .waterfall_left .waterfall_list .waterfall_list_img image,
.main_contain .commodity_info .waterfall .waterfall_right .waterfall_list .waterfall_list_img image {
  width: 100%;
  display: block;
  border-top-left-radius: 10rpx;
  border-top-right-radius: 10rpx;
}
.main_contain .commodity_info .waterfall .waterfall_left .waterfall_list .msg-box,
.main_contain .commodity_info .waterfall .waterfall_right .waterfall_list .msg-box {
  padding: 0 10rpx 10rpx;
}
.main_contain .commodity_info .waterfall .waterfall_left .waterfall_list .msg-box .single-omit,
.main_contain .commodity_info .waterfall .waterfall_right .waterfall_list .msg-box .single-omit {
  font-size: 26rpx;
  text-align: left;
  line-height: 40rpx;
  height: 80rpx;
  color: #434343;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  -webkit-line-clamp: 2;
  word-break: break-all;
  -webkit-box-orient: vertical;
}
.main_contain .commodity_info .waterfall .waterfall_left .waterfall_list .msg-box .single-omit .title_icon,
.main_contain .commodity_info .waterfall .waterfall_right .waterfall_list .msg-box .single-omit .title_icon {
  display: inline-block;
  width: 88rpx;
  height: 28rpx;
  padding-top: 8rpx;
}
.main_contain .commodity_info .waterfall .waterfall_left .waterfall_list .msg-box .coupon,
.main_contain .commodity_info .waterfall .waterfall_right .waterfall_list .msg-box .coupon {
  border: 1px solid #d81e06;
  color: #d81e06;
  padding: 3rpx 10rpx;
  font-size: 26rpx;
  border-radius: 12rpx;
  width: -webkit-fit-content;
  width: fit-content;
  margin-top: 15rpx;
}
.main_contain .commodity_info .waterfall .waterfall_left .waterfall_list .msg-box .unit,
.main_contain .commodity_info .waterfall .waterfall_right .waterfall_list .msg-box .unit {
  display: flex;
  color: #d81e06;
  margin-top: 10rpx;
}
.main_contain .commodity_info .waterfall .waterfall_left .waterfall_list .msg-box .unit text,
.main_contain .commodity_info .waterfall .waterfall_right .waterfall_list .msg-box .unit text {
  font-size: 26rpx;
  line-height: 50rpx;
  display: inline-block;
}
.main_contain .commodity_info .waterfall .waterfall_left .waterfall_list .msg-box .unit .now_price,
.main_contain .commodity_info .waterfall .waterfall_right .waterfall_list .msg-box .unit .now_price {
  font-size: 34rpx;
}
.main_contain .commodity_info .waterfall .waterfall_left .waterfall_list .msg-box .unit .price_icon,
.main_contain .commodity_info .waterfall .waterfall_right .waterfall_list .msg-box .unit .price_icon {
  display: inline-block;
  width: 60rpx;
  height: 20rpx;
  margin: 15rpx 10rpx;
}
.main_contain .commodity_info .waterfall .waterfall_left .waterfall_list .msg-box .unit .originPrice,
.main_contain .commodity_info .waterfall .waterfall_right .waterfall_list .msg-box .unit .originPrice {
  color: #999;
  font-size: 26rpx;
  line-height: 50rpx;
  text-decoration: line-through;
}
.main_contain .commodity_info .waterfall .waterfall_left .waterfall_list .msg-box .comment,
.main_contain .commodity_info .waterfall .waterfall_right .waterfall_list .msg-box .comment {
  line-height: 1;
  text-align: right;
}
.main_contain .commodity_info .waterfall .waterfall_left .waterfall_list .msg-box .comment text,
.main_contain .commodity_info .waterfall .waterfall_right .waterfall_list .msg-box .comment text {
  color: #999;
  margin-top: 10rpx;
  font-size: 24rpx;
}
